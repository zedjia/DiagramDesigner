                </TabControl>
                <!--<DataGrid></DataGrid>-->
                <DataGrid ItemsSource="{Binding SqlExecResult}" CanUserAddRows="False" VerticalScrollBarVisibility="Auto" Margin="0 10 0 0" Height="290"  RowHeight="30"></DataGrid>
            </StackPanel>
        </TabItem>
    </TabControl>
</dx:DXWindow>
